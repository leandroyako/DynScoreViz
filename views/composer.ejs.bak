<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>

    <div class="content">
        <% if (parts.length > 0) { %>
        <% parts.forEach(instrument => { %>
        <a class="single" href="/composer/<%= instrument.route %>">
            <h3 class="title"><%= instrument.name %></h3>
            <p class="snippet"><%= instrument.route %></p>
        </a>
        <% }) %>
        <% } else { %>
        <p>No hay instrumentos para mostrar...</p>
        <% } %>

    </div>

    <%- include("./partials/footer.ejs") %>
</body>

</html>